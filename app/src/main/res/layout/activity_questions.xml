<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/questionDrawer"
    tools:context=".Activity.QuestionsActivity">

    <include android:id="@+id/includQuestion"
        layout="@layout/test_question_list_drawer_layout">
    </include>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_above="@+id/ll1"
            android:layout_alignParentTop="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="8dp">
                <TextView
                    android:id="@+id/questionNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1/5"
                    android:layout_weight="1"
                    android:textSize="15sp">
                </TextView>
                <TextView
                    android:id="@+id/timeRemaining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13:45"
                    android:layout_weight="1"
                    android:textSize="15sp">
                </TextView>
                <Button
                    android:id="@+id/submitTest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:textSize="15sp">
                </Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/questionCat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Math"
                    android:layout_weight="1"
                    android:textSize="20sp">
                </TextView>

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/questionBookmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:src="@drawable/baseline_bookmark"
                    android:visibility="gone"
                    android:contentDescription="bookmark"
                    tools:ignore="TouchTargetSizeCheck">
                </androidx.appcompat.widget.AppCompatImageButton>

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/questionViewList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:src="@drawable/baseline_apps"
                    android:contentDescription="app"
                    tools:ignore="TouchTargetSizeCheck">
                </androidx.appcompat.widget.AppCompatImageButton>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/questionRecycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:padding="8dp"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/prevQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:src="@drawable/baseline_chevron_left"
                android:contentDescription="left_arrow"
                tools:ignore="TouchTargetSizeCheck">
            </androidx.appcompat.widget.AppCompatImageButton>
            <Button
                android:id="@+id/clearSelectionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CLEAR SELECTION"
                android:padding="10dp"
                android:layout_weight="1"
                android:textSize="12sp">
            </Button>
            <Button
                android:id="@+id/markForReviewButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MARK FOR REVIEW"
                android:backgroundTint="@color/prim"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_marginLeft="3dp"
                android:textSize="12sp">
            </Button>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/nextQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:layout_marginRight="3dp"
                android:src="@drawable/baseline_chevron_right"
                android:contentDescription="left_arrow"
                tools:ignore="TouchTargetSizeCheck">
            </androidx.appcompat.widget.AppCompatImageButton>
        </LinearLayout>
    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>