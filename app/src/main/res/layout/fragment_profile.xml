<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.ProfileFragment"
    android:background="@drawable/profile_background">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
      android:orientation="vertical"
       android:elevation="10dp">
      <TextView
          android:id="@+id/profileUserImg"
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:background="@drawable/profile_image_shape"
          android:textColor="@color/white"
          android:textStyle="bold"
          android:text="A"
          android:textSize="70sp"
          android:gravity="center"
          android:layout_marginTop="30dp"
          android:layout_marginBottom="20dp"
          android:layout_gravity="center_horizontal">
      </TextView>
      <TextView
          android:id="@+id/profileUserName"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Name"
          android:textSize="25dp"
          android:gravity="center"
          android:layout_marginBottom="20dp">
      </TextView>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:weightSum="3"
          android:gravity="center"
          android:padding="10dp"
          android:layout_marginTop="30dp"
          android:orientation="horizontal">
         <androidx.cardview.widget.CardView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             app:cardElevation="5dp"
             app:cardCornerRadius="20dp"
             android:layout_marginTop="10dp"
             android:layout_marginBottom="10dp"
             android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2"
                android:background="@drawable/profile_card_layout"
                android:padding="15dp">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="      RANK      "
                   android:textSize="18dp"
                   android:layout_marginBottom="2dp"
                   android:textStyle="bold"
                   android:layout_weight="1"
                   android:layout_gravity="center_horizontal">
               </TextView>
               <TextView
                   android:id="@+id/profileUserRank"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="5"
                   android:layout_weight="1"
                   android:textSize="18dp"
                   android:layout_gravity="center_horizontal">
               </TextView>
            </LinearLayout>
         </androidx.cardview.widget.CardView>

         <androidx.cardview.widget.CardView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             app:cardElevation="5dp"
             app:cardCornerRadius="20dp"
             android:layout_marginTop="10dp"
             android:layout_marginBottom="10dp"
             android:layout_marginLeft="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2"
                android:background="@drawable/profile_card_layout"
                android:padding="15dp">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Overall Score"
                   android:layout_weight="1"
                   android:textStyle="bold"
                   android:layout_marginBottom="2dp"
                   android:textSize="18dp"
                   android:layout_gravity="center_horizontal">
               </TextView>
               <TextView
                   android:id="@+id/profileUserScore"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="5"
                   android:layout_weight="1"
                   android:textSize="18dp"
                   android:layout_gravity="center_horizontal">
               </TextView>
            </LinearLayout>
         </androidx.cardview.widget.CardView>
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:weightSum="4"
          android:gravity="center"
          android:layout_marginTop="70dp"
         android:orientation="horizontal">

         <LinearLayout
             android:id="@+id/accountToProfile"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:weightSum="2"
             android:layout_weight="1"
             android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginBottom="6dp"
                android:src="@drawable/baseline_person">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginBottom="3dp"
                android:text="My Profile">
            </TextView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/prim">
            </View>
         </LinearLayout>
         <View
             android:layout_width="2dp"
             android:layout_height="match_parent"
             android:background="@color/prim">
         </View>
         <LinearLayout
             android:id="@+id/profileToLeaderboard"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:weightSum="2"
             android:layout_weight="1"
             android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginBottom="6dp"
                android:src="@drawable/baseline_leaderboard">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:text="Leaderboard">
            </TextView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/prim">
            </View>
         </LinearLayout>
      </LinearLayout>

   </LinearLayout>

</FrameLayout>